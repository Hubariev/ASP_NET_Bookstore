@using Urok1_povtor_metanit.Models
@model Book
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Dodanie książki</h3>

@using (Html.BeginForm("Create", "Home", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <div id="booksBlock">
        <div class="bookItem">
            <div class="editor-field">
                <table>
                    <tr>

                        <td><p>Wpisz nazwę książki: </p></td>
                        <td><p>@Html.EditorFor(m => Model.Name)</p></td>
                        <td><p>@Html.ValidationMessageFor(model => model.Name)</p></td>


                    </tr>
                    <tr>
                        <td><p>Wybierz imie Authora: </p></td>
                        <td>
                            <p>
                                @foreach (Author c in ViewBag.Authors)
                                {
                                    <input type="checkbox" name="selectedAuthors" value="@c.Id" />@c.Name <br />
                                }
                            </p>
                        </td>
                        <td><p>@Html.ValidationMessageFor(model => model.Authors)</p></td>
                    </tr>
                    <tr>
                        <td><p>Wpisz cenę książki: </p></td>
                        <td><p>@Html.EditorFor(m => Model.Price)</p></td>
                        <td><p>@Html.ValidationMessageFor(model => model.Price)</p></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <p><a class="addLink">Dodać książkę</a></p>
    <p><input type="submit" value="Dodać"></p>
}


@Scripts.Render("~/scripts/jquery-3.3.1.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")


