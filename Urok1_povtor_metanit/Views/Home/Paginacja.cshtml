
@model Urok1_povtor_metanit.Models.IndexViewModel
@using Urok1_povtor_metanit.Helpers
@{
    ViewBag.Title = "Paginacja";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table">
    <tr>
        <td><b>Nazwa</b></td>
        <td><b>Cena</b></td>
    </tr>
    @foreach (var item in Model.Books)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
        </tr>
    }
</table>
<br />
<div class="btn-group">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("Paginacja", new { page = x }))
</div>

